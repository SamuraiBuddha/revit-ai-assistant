# Revit AI Assistant Environment Variables
# Copy this file to .env and fill in your values

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local LLM Configuration (optional)
# For LM Studio
LM_STUDIO_HOST=http://localhost:1234
LM_STUDIO_MODEL=local-model

# For Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Agent Model Preferences (optional)
# Override default models for specific agents
API_EXPERT_MODEL=claude-3-sonnet-20240229
DYNAMO_AGENT_MODEL=local-model
STANDARDS_AGENT_MODEL=claude-3-sonnet-20240229
ORCHESTRATOR_MODEL=claude-3-opus-20240229

# Revit API Documentation Path (optional)
REVIT_API_DOCS_PATH=./docs/revit_api

# Standards Database Path (optional)
STANDARDS_DB_PATH=./data/standards.db

# Logging Level (optional)
LOG_LEVEL=INFO

# Development Mode (optional)
DEV_MODE=false
